<center><h1 class="bg-text">HESAP GİRİŞ</h1></center>
<div class="container-fluid">
  <div class="row bg-text bg-colors">
    <div class="col-md-10" style="padding-left: 50mm">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
        <%= f.input :password, required: false, input_html: { autocomplete: "current-password" }, label: "Şifre" %>
        <%= f.input :remember_me, as: :boolean, label: "Beni hatırla" if devise_mapping.rememberable? %>
        <p><%= f.button :submit, class: "bg-button", style: "margin-top:2mm;", value: "Giriş Yap" %></p>
      <% end %>
    </div>
  </div>
</div>
<%= render "devise/shared/links" %>