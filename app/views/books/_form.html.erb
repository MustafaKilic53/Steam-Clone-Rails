<div class="container-fluid">
  <div class="row bg-text bg-colors">
    <div class="col-md-10" style="padding-left: 50mm">
      <%= simple_form_for @book, :html => { :multipart => true } do |f| %>
        <p><%= f.input :title, label: "Oyun Adı" %></p>
        <p><%= f.input :description, label: "Hakkında" %></p>
        <p><%= f.input :author, label: "Yapımcı" %></p>
        <p class= "bg-colors"><%= f.file_field :book_img, class: "bg-text bg-button" %></p> <%= select_tag(:category_id, options_for_select(@categories),class: "bg-text2", :prompt => "Bir kategori seçin") %>
        <%= f.button :submit, class: "bg-button", value: "Oluştur" %>
      <% end %>
    </div>
  </div>
</div>